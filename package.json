  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "browser": true,
      "amd": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "globals": {
      "createjs": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-underscore-dangle": 0,
      "comma-spacing": 2,
      "no-multi-spaces": "error",
      "space-infix-ops": "error",
      "no-trailing-spaces": "error",
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "key-spacing": [
        "error",
        {
          "mode": "strict"
        }
      ],
      "no-loop-func": 0
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "dependencies": {
    "@types/easeljs": "^1.0.0",
    "bezier-js": "^2.2.1",
    "color": "^0.11.3",
    "createjs": "^1.0.1",
    "easing-utils": "0.0.5",
    "randomcolor": "^0.4.4",
    "tree-kit": "^0.5.26"
  },
  "scripts": {
    "test": "mochify",
    "test3": "mocha-phantomjs -R dot test.html",
    "test2": "mocha -r ts-node/register -r jsdom-global/register app_ts/**/*.spec.ts",
    "build": "npm run compile && npm run bundle",
    "compile": "tsc",
    "compile_test": "tsc --outFile test/test.js --module system test_ts/main.spec.ts",
    "bundle": "browserify build/main.js -o bundle.js"
  }
